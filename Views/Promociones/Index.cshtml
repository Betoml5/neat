@model neat.Models.ViewModels.PromocionesViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "MainLayout";
}

<section class="menu1">
    @if (Model.Hamburguesas.Count > 0)
    {
        <img src="~/hamburguesas/@(Model.Hamburguesas.ElementAt(Model.IndiceModeloActual).Id).png" />
        <div class=" datos">
            <h3>
                <del>@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual).Precio.ToString("c")</del>
                <b>@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual).PrecioPromocion.ToString("c")</b>
            </h3>
            <h2>@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual).Nombre</h2>
            <p>@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual).Descripcion</p>
        </div>
        <span>
            <a
                href="~/promociones/menu/@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual-1).Nombre.Replace(" ", "-")">&lt;</a>
            <a
                href="~/promociones/menu/@Model.Hamburguesas.ElementAt(Model.IndiceModeloActual+1).Nombre.Replace(" ", "-")">&gt;</a>
        </span>
    }
    else
    {
        <h2>No hay promociones</h2>
    }
</section>