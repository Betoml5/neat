@model neat.Models.ViewModels.MenuViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "MainLayout";
}

<section class="menu3">

    <div>
        <h1>NUESTRO MENÃš</h1>



        @foreach (var grupo in Model.Hamburguesas)
        {
            <h3>@grupo.Key</h3>
            foreach (var hamburguesa in grupo)
            {
                <h2>
                    <a href="~/menu/@hamburguesa.Nombre.Replace(" ", "-")"><span>@hamburguesa.Nombre</span>
                        <span class="price">@hamburguesa.Precio.ToString("C")</span>
                    </a>
                </h2>
            }
        }

    </div>
    <div>
        <img src="~/hamburguesas/@(Model.Hamburguesa.Id).png" />
        <p>@Model.Hamburguesa.Descripcion</p>
    </div>
</section>