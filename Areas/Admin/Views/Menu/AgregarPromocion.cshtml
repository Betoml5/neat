@model neat.Areas.Admin.Models.ViewModels.AgregarPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AgregarPromocion";
    Layout = "AdminLayout";
}

<form action="~/admin/menu/agregarpromocion" method="post">
    <h1>Agregar un descuento de promoción</h1>
    <input type="hidden" asp-for="Id">
    <span>
        <label for="nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" id="nombre" required>
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input asp-for="PrecioReal" type="text" id="precio" required>
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input asp-for="PrecioPromocion" type="text" id="promocion" required>
    </span>
    <span class="error">
        @Html.ValidationSummary(true)
    </span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a href="~/admin/menu">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>
